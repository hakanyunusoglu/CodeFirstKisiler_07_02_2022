@model CodeFirstKisiler.Models.Adres

@{
    ViewBag.Title = "YeniAdres";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>YeniAdres</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Adres</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.AdresTanim, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.TextAreaFor(model => model.AdresTanim, new { @class = "form-control", placeholder = "Adres Tanımı", name = "ad", cols = "30", rows = "10" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Kisiler, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.DropDownListFor(model => model.KisiId, (List<SelectListItem>)ViewBag.kisiler, new { @class = "form-control" })
            </div>
        </div>
        <br />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Kaydet" class="btn btn-success" />
            </div>
            <div>
                @Html.ActionLink("Listeye Dön", "Index", "Home")
            </div>
        </div>
    </div>

    <div class="form-group">
        @if (ViewBag.Result != null)
        {
            <div class="alert alert-@ViewBag.Status">
                @ViewBag.Result
            </div>
        }        
    </div>
}
