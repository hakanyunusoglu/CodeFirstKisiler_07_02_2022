@model CodeFirstKisiler.Models.Kisiler

@{
    ViewBag.Title = "Sil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h5>Kişiyi silmek istediğinize emin misiniz?</h5>
<div>
    <hr />
    <table class="table table-bordered table-striped">
        <tr>
            <td>Ad</td>
            <td>@Model.Ad</td>
        </tr>
        <tr>
            <td>Soyad</td>
            <td>@Model.Soyad</td>
        </tr>
        <tr>
            <td>Yaş</td>
            <td>@Model.Yas</td>
        </tr>
    </table>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Sil" class="btn btn-danger" /> |
            @Html.ActionLink("Listeye Dön", "Index","Home")
        </div>
    }
</div>
